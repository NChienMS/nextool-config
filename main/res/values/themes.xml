<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Nextool" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- thêm để tránh flash/nháy -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationNone</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Theme riêng cho Splash để nền trắng, không action bar -->
    <style name="Theme.Nextool.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- thêm để tránh flash/nháy -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationNone</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- style để disable animation -->
    <style name="WindowAnimationNone">
        <item name="android:activityOpenEnterAnimation">@anim/none</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/none</item>
        <item name="android:taskOpenEnterAnimation">@anim/none</item>
        <item name="android:taskOpenExitAnimation">@anim/none</item>
        <item name="android:taskCloseEnterAnimation">@anim/none</item>
        <item name="android:taskCloseExitAnimation">@anim/none</item>
    </style>

</resources>
